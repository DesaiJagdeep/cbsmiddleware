    <!--
        Added the entity CourtCase.
    -->
    <changeSet id="20230829103147-1" author="jhipster">
        <createTable tableName="court_case">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sr_no" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="account_no" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="name_of_defaulter" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="loan_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="loan_amount" type="double">
                <constraints nullable="true" />
            </column>
            <column name="loan_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="term_of_loan" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="interest_rate" type="double">
                <constraints nullable="true" />
            </column>
            <column name="installment_amount" type="double">
                <constraints nullable="true" />
            </column>
            <column name="total_credit" type="double">
                <constraints nullable="true" />
            </column>
            <column name="balance" type="double">
                <constraints nullable="true" />
            </column>
            <column name="interest_paid" type="double">
                <constraints nullable="true" />
            </column>
            <column name="penal_interest_paid" type="double">
                <constraints nullable="true" />
            </column>
            <column name="due_amount" type="double">
                <constraints nullable="true" />
            </column>
            <column name="due_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="due_interest" type="double">
                <constraints nullable="true" />
            </column>
            <column name="due_penal_interest" type="double">
                <constraints nullable="true" />
            </column>
            <column name="due_more_interest" type="double">
                <constraints nullable="true" />
            </column>
            <column name="interest_recivable" type="double">
                <constraints nullable="true" />
            </column>
            <column name="gaurentor_one" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="gaurentor_one_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="gaurentor_two" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="gaurentor_two_address" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="first_notice_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="second_notice_date" type="date">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

